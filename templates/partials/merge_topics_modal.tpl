<div class="panel panel-primary merge-topic-card g__panel g__panel-primary g__merge-topic-card">
	<div class="panel-heading g__panel-heading">
		<h3 class="panel-title g__panel-title">[[topic:thread_tools.merge_topics]]</h3>
	</div>
	<div class="panel-body g__panel-body">
		<p>
			[[topic:merge_topics_instruction]]<br />
			<div class="topics-section g__topics-section">
				<!-- BEGIN topics -->
				<!-- IF @index -->
				<i class="fa fa-chevron-up"></i><br/>
				<!-- ENDIF @index -->
				<span>{topics.title}</span><br/>
				<!-- END topics -->
			</div>
		</p>
	</div>
	<div class="panel-footer g__panel-footer">
		&nbsp;
		<div class="btn-group pull-right g__btn-group g__pull-right">
			<button class="btn btn-link btn-xs g__btn g__btn-link g__btn-xs" id="merge_topics_cancel">[[global:buttons.close]]</button>
			<button class="btn btn-primary btn-xs g__btn g__btn-primary g__btn-xs" id="merge_topics_confirm" disabled>[[topic:thread_tools.merge]]</button>
		</div>
	</div>
</div>